{
  "name": "teawork-be",
  "version": "0.0.0",
  "private": true,
  "main": "./index.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon --env-file=.env.development ./dist/index.js",
